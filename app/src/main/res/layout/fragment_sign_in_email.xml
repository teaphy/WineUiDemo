<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".login.SignInEmailFragment">
	
	<TextView
		android:id="@+id/tip_email_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@android:color/black"
		android:textSize="18sp"
		android:text="Your email address"
		android:layout_marginStart="14dp"
		android:layout_marginTop="96dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginLeft="14dp"/>
	
	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/email_edit_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="6dp"
		android:layout_marginStart="14dp"
		android:layout_marginEnd="14dp"
		app:hintEnabled="false"
		app:endIconMode="clear_text"
		app:errorEnabled="false"
		app:errorTextColor="@color/colorAccent"
		app:endIconDrawable="@drawable/delete"
		app:endIconTint="@color/colorAccent"
		app:layout_constraintStart_toStartOf="@id/tip_email_text"
		app:layout_constraintTop_toBottomOf="@id/tip_email_text">
		<com.google.android.material.textfield.TextInputEditText
			android:id="@+id/email_edit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="textEmailAddress"
			android:hint="please input email"/>
	</com.google.android.material.textfield.TextInputLayout>
	
</androidx.constraintlayout.widget.ConstraintLayout>